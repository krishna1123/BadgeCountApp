<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.krishna.badgecountapp.MyDemoApps">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_badgecount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BadgeCount" />

        <Button
            android:id="@+id/btn_compass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Compass" />

        <Button
            android:id="@+id/btn_rotation_orientation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RotationOrientation" />

        <Button
            android:id="@+id/btn_Adil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AidlService" />

        <Button
            android:id="@+id/btn_Messager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MessangerService" />

        <Button
            android:id="@+id/btn_setWallPaper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SetWallpaper" />

        <Button
            android:id="@+id/btn_nfc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NFCDemo" />

        <Button
            android:id="@+id/btn_print_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PrintContent" />

        <Button
            android:id="@+id/btn_save_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SaveImage" />

        <Button
            android:id="@+id/btn_screen_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ScreenRecord" />

        <Button
            android:id="@+id/btn_send_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SendEmail" />

        <Button
            android:id="@+id/btn_image_merging"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ImageMerging" />

        <Button
            android:id="@+id/btn_image_capture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CaptureImage" />

        <Button
            android:id="@+id/btn_live_wallpaper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LiveWallpaper" />

        <Button
            android:id="@+id/btn_live_wallpaper_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LiveWallpaperSettings" />

        <Button
            android:id="@+id/btn_accellaration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accellaration" />

        <Button
            android:id="@+id/btn_imageLoader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ImageLoading" />

        <Button
            android:id="@+id/btn_test_sample"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TestSample" />

    </LinearLayout>

</ScrollView>
